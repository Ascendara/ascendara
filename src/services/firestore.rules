rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Users - readable by all authenticated, writable only by owner
    // IMPORTANT: ascendSubscription field can only be written by admin/backend
    match /users/{userId} {
      allow read: if request.auth != null;
      // Allow create for new users (no resource.data exists)
      allow create: if request.auth != null && request.auth.uid == userId;
      // Allow update but prevent modifying protected fields
      allow update: if request.auth != null && request.auth.uid == userId
        && !request.resource.data.diff(resource.data).affectedKeys().hasAny(['ascendSubscription', 'createdAt']);
      // Allow users to delete their own account
      allow delete: if request.auth != null && request.auth.uid == userId;
      
      // Game achievements subcollection - only owner can read/write
      match /gameAchievements/{gameId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }
    
    // User status - readable by authenticated users, writable only by owner
    match /userStatus/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Profile stats - publicly readable for flexing, writable only by owner
    match /profileStats/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Cloud library - publicly readable to show off games, writable only by owner
    match /cloudLibrary/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Game achievements - publicly readable to flex achievements, writable only by owner
    match /gameAchievements/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;
      
      // Achievements subcollection for each game
      match /games/{gameId} {
        allow read: if request.auth != null;
        allow write: if request.auth != null && request.auth.uid == userId;
      }
    }
    
    // Friend requests - readable/writable by sender or receiver
    match /friendRequests/{requestId} {
      allow read: if request.auth != null && 
        (resource.data.fromUid == request.auth.uid || resource.data.toUid == request.auth.uid);
      allow create: if request.auth != null && request.resource.data.fromUid == request.auth.uid;
      allow update, delete: if request.auth != null && 
        (resource.data.fromUid == request.auth.uid || resource.data.toUid == request.auth.uid);
    }
    
    // Friends list - readable by authenticated, writable by owner or when accepting friend request
    match /friends/{userId} {
      allow read: if request.auth != null;
      // Allow write to own friends list
      allow write: if request.auth != null && request.auth.uid == userId;
      // Allow adding yourself to someone else's friends list (for accepting requests)
      allow update: if request.auth != null 
        && request.resource.data.list.hasAll(resource.data.list)
        && request.resource.data.list.size() == resource.data.list.size() + 1
        && request.resource.data.list.hasAny([request.auth.uid]);
      allow create: if request.auth != null
        && request.resource.data.list.size() == 1
        && request.resource.data.list[0] == request.auth.uid;
    }
    
    // Hardware IDs - for trial abuse prevention
    // Allow unauthenticated reads to check if hardware ID exists before registration
    // Only authenticated users can create, and only for themselves
    match /hardwareIds/{hardwareId} {
      allow read: if true;
      // Only allow create if userId matches authenticated user
      allow create: if request.auth != null 
        && request.resource.data.userId == request.auth.uid;
      // No updates or deletes allowed (immutable once created)
      allow update, delete: if false;
    }
    
    // Conversations - readable/writable only by participants
    // The conversationId format is "uid1_uid2" (sorted), so we can validate from the ID
    match /conversations/{conversationId} {
      // Allow read if user is a participant (check resource.data only if doc exists)
      allow read: if request.auth != null;
      // Allow create if user is in participants and there are exactly 2 participants
      allow create: if request.auth != null 
        && request.auth.uid in request.resource.data.participants
        && request.resource.data.participants.size() == 2;
      // Allow update if user is a participant
      allow update: if request.auth != null 
        && request.auth.uid in resource.data.participants;
      
      // Messages subcollection
      match /messages/{messageId} {
        allow read: if request.auth != null;
        allow create: if request.auth != null 
          && request.resource.data.senderId == request.auth.uid;
        allow update: if request.auth != null 
          && request.auth.uid != resource.data.senderId
          && request.resource.data.diff(resource.data).affectedKeys().hasOnly(['read']);
      }
    }
  }
}